<section>
  <div class="container">
    <div class="row">

      
       
    </div>

    <table class="table mt-2">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">NAME</th>
          <th scope="col">EMAIL</th>
          <th scope="col">PASSWORD</th>
        </tr>
      </thead>
      <tbody>
        {{#each user}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          <td>{{this.Password}}</td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-data/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
            </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>